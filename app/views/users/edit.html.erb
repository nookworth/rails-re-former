<%= form_with model: @user, url: user_path, method: :patch do |form| %>
  <%= form.label :email %>
  <%= form.text_field :email %>
  <%= form.label :username %>
  <%= form.text_field :username %>
  <%= form.label :password %>
  <%= form.password_field :password %>
  <%= form.submit %>
<% end %>